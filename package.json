  "description": "A collection of animated CSS utility components for React with Framer Motion & AnimeJS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "./src/motionkit.css",
  "files": [
